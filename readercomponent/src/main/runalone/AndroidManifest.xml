<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.mrzhang.reader">

    <application
        android:name="com.mrzhang.reader.runalone.application.ReaderApplication"
        android:allowBackup="true"
        android:label="@string/readerbook_app_name"
        android:supportsRtl="true"
        android:theme="@style/commonAppTheme"
        tools:replace="android:label">

        <activity android:name="com.mrzhang.reader.runalone.ReaderTestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
